{
  "compilerOptions": {
    "incremental": false,
    "sourceMap": false,
    "allowJs": true,
    "checkJs": false,
    "module": "nodenext",          // <-- CHANGED
    "moduleResolution": "nodenext", // <-- CHANGED
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "ESNext",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],   
  "exclude": ["dist", "lib", "node_modules", "**/*.test.ts"]
}