{
  "name": "openai-pr-reviewer",
  "version": "0.0.0",
  "private": true,
  "description": "OpenAI-based PR Reviewer and Summarizer.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsup src/main.mts --format esm --target es2020 --out-dir dist  && cp node_modules/@dqbd/tiktoken/tiktoken_bg.wasm dist/tiktoken_bg.wasm",
    "package": "pnpm build",
    "act": "pnpm run build && pnpm run package && ./bin/act pull_request_target --secret-file .secrets",
    "format": "prettier --write '**/*.mts'",
    "format-check": "prettier --check '**/*.mts'",
    "lint": "eslint src/**/*.mts",
    "test": "jest",
    "all": "pnpm run build && pnpm run format && pnpm run lint && pnpm run package && pnpm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fluxninja/openai-pr-reviewer.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@dqbd/tiktoken": "^1.0.21",
    "@eslint/compat": "^1.2.8",
    "@langchain/community": "^0.3.41",
    "@langchain/core": "0.3.48",
    "@langchain/openai": "^0.5.7",
    "@octokit/action": "^7.0.2",
    "@octokit/core": "^6.1.5",
    "@octokit/plugin-retry": "^7.2.1",
    "@octokit/plugin-throttling": "^10.0.0",
    "dotenv": "^16.5.0",
    "minimatch": "^10.0.1",
    "node-fetch": "^3.3.2",
    "p-limit": "^6.2.0",
    "p-retry": "^6.2.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/node": "^22.15.2",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "@vercel/ncc": "^0.38.3",
    "chatgpt": "^5.2.5",
    "eslint": "^9.25.1",
    "eslint-config-love": "^119.0.0",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-n": "^17.17.0",
    "eslint-plugin-promise": "^7.2.1",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "3.5.3",
    "ts-jest": "^29.3.2",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  }
}
